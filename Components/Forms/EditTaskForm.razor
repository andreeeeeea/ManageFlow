@using ManageFlow.Data.Models
@using ManageFlow.Services

@inject ITaskManagerService TaskService
@inject IEmployeeService EmployeeService
@rendermode InteractiveServer

<div class="modal-overlay">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Edit Task</h3>
                <button type="button" class="btn-close" @onclick="CancelEdit"></button>
            </div>

            <div class="modal-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        @successMessage
                    </div>
                }

                @if (editingTask == null)
                {
                    <div class="text-center py-3">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading task details...</p>
                    </div>
                }
                else
                {
                <EditForm Model="@editingTask" OnValidSubmit="@SaveTask">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                        <InputText id="title" @bind-Value="editingTask.Title" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <InputText id="description" @bind-Value="editingTask.Description" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="status" class="form-label">Status <span class="text-danger">*</span></label>
                            <InputSelect id="status" @bind-Value="editingTask.Status" class="form-control">
                                @foreach (var status in Enum.GetValues<WorkStatus>())
                                {
                                    <option value="@status">@FormatEnumName(status.ToString())</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="priority" class="form-label">Priority <span class="text-danger">*</span></label>
                            <InputSelect id="priority" @bind-Value="editingTask.Priority" class="form-control">
                                @foreach (var priority in Enum.GetValues<TaskPriority>())
                                {
                                    <option value="@priority">@priority</option>
                                }
                            </InputSelect>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="deadline" class="form-label">Deadline</label>
                        <InputDate id="deadline" @bind-Value="editingTask.Deadline" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Assign To <span class="text-danger">*</span></label>
                        @if (employees == null)
                        {
                            <p>Loading employees...</p>
                        }
                        else if (!employees.Any())
                        {
                            <p>No employees found</p>
                        }
                        else
                        {
                            <div class="dropdown-multiselect">
                                <button type="button" class="form-control dropdown-toggle-btn" @onclick="ToggleDropdown" @onclick:preventDefault @onclick:stopPropagation>
                                    @if (selectedEmployeeIds != null && selectedEmployeeIds.Any())
                                    {
                                        <span>@selectedEmployeeIds.Count employee(s) selected</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Select employees...</span>
                                    }
                                    <i class="bi bi-chevron-down"></i>
                                </button>
                                @if (showDropdown)
                                {
                                    <div class="dropdown-menu-custom show">
                                        @foreach (var employee in employees)
                                        {
                                            <label class="dropdown-item-check">
                                                <input type="checkbox"
                                                    checked="@(selectedEmployeeIds?.Contains(employee.Id) ?? false)"
                                                    @onchange="@(e => ToggleEmployee(employee.Id, (bool)e.Value!))" />
                                                <span>@employee.FirstName @employee.LastName@(employee.Department != null ? $" - {employee.Department.Name}" : "")</span>
                                            </label>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </EditForm>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .modal-dialog {
        width: 90%;
        max-width: 600px;
        margin: 1.75rem auto;
    }

    .modal-content {
        background-color: var(--bg-secondary);
        border-radius: 0.3rem;
        box-shadow: var(--card-shadow);
        z-index: 1060;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .modal-body {
        padding: 1rem;
    }

    .dropdown-multiselect {
        position: relative;
    }

    .dropdown-toggle-btn {
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: left;
        cursor: pointer;
        background-color: var(--input-bg);
        color: var(--text-primary);
    }

    .dropdown-toggle-btn:hover {
        border-color: #667eea;
    }

    .dropdown-menu-custom {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        max-height: 200px;
        overflow-y: auto;
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 0.375rem;
        box-shadow: var(--card-shadow);
        margin-top: 0.25rem;
    }

    .dropdown-item-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        cursor: pointer;
        color: var(--text-primary);
        transition: background-color 0.15s ease;
    }

    .dropdown-item-check:hover {
        background-color: var(--bg-hover);
    }

    .dropdown-item-check input[type="checkbox"] {
        width: 1rem;
        height: 1rem;
        cursor: pointer;
    }
</style>

@code {
    [Parameter] public int TaskId { get; set;}
    [Parameter] public EventCallback OnClose { get; set;}
    private Tasks? editingTask = new Tasks();
    private List<Employees>? employees = new();
    private List<int>? selectedEmployeeIds = new();
    private string? errorMessage, successMessage;
    private bool showDropdown = false;

    private string FormatEnumName(string name) => System.Text.RegularExpressions.Regex.Replace(name, "(\\B[A-Z])", " $1");

    private void ToggleDropdown()
    {
        showDropdown = !showDropdown;
    }

    protected override async Task OnParametersSetAsync()
    {
        try {
            editingTask = await TaskService.GetTaskByIdAsync(TaskId);

            if (editingTask != null)
            {
                employees = await EmployeeService.GetEmployeesAsync();
                var assignments = await TaskService.GetTaskAssignmentsAsync(TaskId);
                selectedEmployeeIds = assignments?.Select(ta => ta.EmployeeId).ToList() ?? new();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading task: {ex.Message}";
        }
    }
    
    private async Task SaveTask()
    {
        try
        {
            if (editingTask == null) return;

            await TaskService.UpdateTaskAsync(editingTask);
            await TaskService.AssignEmployeesToTaskAsync(editingTask.Id, selectedEmployeeIds);

            successMessage = "Task updated successfully!";
            await Task.Delay(1500); 
            await OnClose.InvokeAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving task: {ex.Message}";
            Console.WriteLine($"Error saving task: {ex.Message}");
        }
    }
    private void ToggleEmployee(int employeeId, bool isSelected)
    {
        if (selectedEmployeeIds == null) return;

        if (isSelected)
        {
            if (!selectedEmployeeIds.Contains(employeeId))
                selectedEmployeeIds.Add(employeeId);
        }
        else
        {
            selectedEmployeeIds.Remove(employeeId);
        }
    }
    private async Task CancelEdit()
    {
        await OnClose.InvokeAsync();
    }
}