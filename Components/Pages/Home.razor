@page "/"
@using Microsoft.AspNetCore.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<PageTitle>ManageFlow</PageTitle>

<AuthorizeView>
    <Authorized>
        @{
            NavigationManager.NavigateTo("/dashboard");
        }
    </Authorized>
    <NotAuthorized>
        <div class="modern-landing">
            <div class="animated-bg">
                <div class="gradient-sphere sphere-1"></div>
                <div class="gradient-sphere sphere-2"></div>
                <div class="gradient-sphere sphere-3"></div>
            </div>

            <nav class="landing-nav">
                <div class="nav-container">
                    <div class="logo">
                        <span class="logo-text">ManageFlow</span>
                    </div>
                </div>
            </nav>

            <section class="hero">
                <div class="hero-content">
                    <h1 class="hero-title">
                        Manage Your Team<br/>
                        <span class="gradient-text">With Confidence</span>
                    </h1>

                    <p class="hero-description">
                        Empower your organization with intelligent task management,<br/>
                        seamless collaboration, and real-time insights.
                    </p>

                    <div class="hero-actions">
                        <a href="Account/Register" class="btn-modern btn-primary">
                            Sign Up For Free
                            <svg class="btn-arrow" viewBox="0 0 24 24" width="20" height="20">
                                <path fill="currentColor" d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                            </svg>
                        </a>
                        <a href="Account/Login" class="btn-modern btn-secondary">
                            Sign In
                        </a>
                    </div>
                </div>
            </section>

            <section class="features-modern">
                <div class="features-container">
                    <div class="feature-modern">
                        <div class="feature-icon-modern">
                            <div class="icon-bg"></div>
                            <span>👥</span>
                        </div>
                        <h3>Smart Organization</h3>
                        <p>AI-powered team management that adapts to your workflow</p>
                    </div>
                    <div class="feature-modern">
                        <div class="feature-icon-modern">
                            <div class="icon-bg"></div>
                            <span>⚡</span>
                        </div>
                        <h3>Real-time Collaboration</h3>
                        <p>Instant updates and seamless communication across teams</p>
                    </div>
                    <div class="feature-modern">
                        <div class="feature-icon-modern">
                            <div class="icon-bg"></div>
                            <span>📈</span>
                        </div>
                        <h3>Advanced Analytics</h3>
                        <p>Data-driven insights to optimize productivity and performance</p>
                    </div>
                </div>
            </section>
        </div>
    </NotAuthorized>
</AuthorizeView>

<style>
    .modern-landing {
        position: relative;
        min-height: 100vh;
        overflow: hidden;
        background: linear-gradient(180deg, #0a0e27 0%, #1a1f3a 100%);
    }

    .animated-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    .gradient-sphere {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.4;
        animation: float 20s infinite;
    }

    .sphere-1 {
        width: 600px;
        height: 600px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        top: -200px;
        left: -200px;
        animation-delay: 0s;
    }

    .sphere-2 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        bottom: -100px;
        right: -100px;
        animation-delay: 5s;
    }

    .sphere-3 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        top: 50%;
        left: 50%;
        animation-delay: 10s;
    }

    @@keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(30px, -50px) scale(1.1); }
        50% { transform: translate(-20px, 30px) scale(0.9); }
        75% { transform: translate(40px, 20px) scale(1.05); }
    }

    .landing-nav {
        position: relative;
        z-index: 100;
        padding: 2rem 0;
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo-text {
        font-size: 1.8rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .nav-actions {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

    .nav-link:hover {
        color: white;
    }

    .nav-btn {
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .nav-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .hero {
        position: relative;
        z-index: 10;
        padding: 4rem 2rem;
        text-align: center;
    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .badge-container {
        margin-bottom: 2rem;
    }

    .badge-modern {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1.5rem;
        line-height: 1.2;
        letter-spacing: -2px;
    }

    .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-description {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 4rem;
    }

    .btn-modern {
        padding: 1rem 2rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 25px rgba(102, 126, 234, 0.4);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 35px rgba(102, 126, 234, 0.5);
    }

    .btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }

    .btn-arrow {
        transition: transform 0.3s;
    }

    .btn-modern:hover .btn-arrow {
        transform: translateX(5px);
    }

    /* Stats */
    .stats-container {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-bottom: 4rem;
    }

    .stat {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-divider {
        width: 1px;
        background: rgba(255, 255, 255, 0.2);
    }

    .features-modern {
        position: relative;
        z-index: 10;
        padding: 2rem 2rem;
    }

    .features-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .feature-modern {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s;
    }

    .feature-modern:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-5px);
        border-color: rgba(102, 126, 234, 0.5);
    }

    .feature-icon-modern {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
    }

    .feature-icon-modern span {
        font-size: 3rem;
        position: relative;
        z-index: 2;
    }

    .icon-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
        border-radius: 20px;
        z-index: 1;
    }

    .feature-modern h3 {
        color: white;
        font-size: 1.4rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .feature-modern p {
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.6;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-actions {
            flex-direction: column;
        }

        .btn-modern {
            width: 100%;
            justify-content: center;
        }

        .stats-container {
            flex-direction: column;
            gap: 2rem;
        }

        .stat-divider {
            display: none;
        }

        .features-container {
            grid-template-columns: 1fr;
        }
    }
</style>
