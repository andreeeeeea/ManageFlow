@page "/dashboard"
@using ManageFlow.Data.Models
@using ManageFlow.Services
@using ManageFlow.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject ITaskManagerService TaskService
@inject IEmployeeService EmployeeService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<AuthorizeView>
    <Authorized>
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="page-title mb-1">Welcome, @userFirstName @userLastName</h2>
                    <p class="text-muted mb-0">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <div class="stats-grid mb-5">
            <div class="stat-box">
                <div class="stat-content-wrapper">
                    <span class="stat-value">@employees</span>
                    <span class="stat-text">Members</span>
                </div>
                <div class="stat-icon-wrapper">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                </div>
            </div>
            <div class="stat-box">
                <div class="stat-content-wrapper">
                    <span class="stat-value">@tasks</span>
                    <span class="stat-text">Total Tasks</span>
                </div>
                <div class="stat-icon-wrapper">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
                    </svg>
                </div>
            </div>
            <div class="stat-box">
                <div class="stat-content-wrapper">
                    <span class="stat-value">@inProgressTasks</span>
                    <span class="stat-text">In Progress Tasks</span>
                </div>
                <div class="stat-icon-wrapper">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12 6 12 12 16 14"/>
                    </svg>
                </div>
            </div>
            <div class="stat-box">
                <div class="stat-content-wrapper">
                    <span class="stat-value">@completedTasksThisWeek</span>
                    <span class="stat-text">Completed Tasks</span>
                </div>
                <div class="stat-icon-wrapper">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="dashboard-grid mb-5">
            <div class="status-breakdown">
                <h2 class="breakdown-title">Task Status Breakdown</h2>
                <div class="status-list">
                    <div class="status-row">
                        <div class="status-header">
                            <span class="status-name">Not Started</span>
                            <span class="status-count">@notStartedTasks</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill progress-notstarted" style="width: @GetPercentage(notStartedTasks)%"></div>
                        </div>
                    </div>
                    <div class="status-row">
                        <div class="status-header">
                            <span class="status-name">In Progress</span>
                            <span class="status-count">@inProgressTasks</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill progress-inprogress" style="width: @GetPercentage(inProgressTasks)%"></div>
                        </div>
                    </div>
                    <div class="status-row">
                        <div class="status-header">
                            <span class="status-name">Completed</span>
                            <span class="status-count">@completedTasks</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill progress-completed" style="width: @GetPercentage(completedTasks)%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="recent-tasks-container">
                <h2 class="breakdown-title">Recent Tasks</h2>
                <div class="recent-tasks-list">
                    @if (recentTasks.Count == 0)
                    {
                        <div class="empty-state">No tasks yet</div>
                    }
                    else
                    {
                        @foreach (var task in recentTasks)
                        {
                            <div class="recent-task-item">
                                <div class="recent-task-info">
                                    <span class="recent-task-title">@task.Title</span>
                                    <span class="recent-task-meta">@GetAssignedEmployees(task)</span>
                                </div>
                                <span class="recent-task-status @GetStatusClass(task.Status)">@FormatEnumName(task.Status.ToString())</span>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="tasks-section">
            <div class="task-card">
                <div class="task-column-header task-column-overdue">
                    <div class="header-with-icon">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <h3>Overdue</h3>
                    </div>
                    <span class="task-count">@overdueTasks.Count</span>
                </div>
                <div class="task-list">
                    @if (overdueTasks.Count == 0)
                    {
                        <div class="empty-state">No overdue tasks</div>
                    }
                    else
                    {
                        @foreach (var task in overdueTasks)
                        {
                            <div class="task-item task-item-overdue">
                                <div class="task-title">@task.Title</div>
                                <div class="task-meta">@GetAssignedEmployees(task) · @GetDeadlineText(task.Deadline)</div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="task-card">
                <div class="task-column-header task-column-upcoming">
                    <div class="header-with-icon">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                            <line x1="16" y1="2" x2="16" y2="6"/>
                            <line x1="8" y1="2" x2="8" y2="6"/>
                            <line x1="3" y1="10" x2="21" y2="10"/>
                        </svg>
                        <h3>This Week</h3>
                    </div>
                    <span class="task-count">@upcomingTasks.Count</span>
                </div>
                <div class="task-list">
                    @if (upcomingTasks.Count == 0)
                    {
                        <div class="empty-state">No upcoming tasks</div>
                    }
                    else
                    {
                        @foreach (var task in upcomingTasks)
                        {
                            <div class="task-item task-item-upcoming">
                                <div class="task-title">@task.Title</div>
                                <div class="task-meta">@GetAssignedEmployees(task) · @GetDeadlineText(task.Deadline)</div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="task-card">
                <div class="task-column-header task-column-completed">
                    <div class="header-with-icon">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        <h3>Completed</h3>
                    </div>
                    <span class="task-count">@recentCompletions.Count</span>
                </div>
                <div class="task-list">
                    @if (recentCompletions.Count == 0)
                    {
                        <div class="empty-state">No recent completions</div>
                    }
                    else
                    {
                        @foreach (var task in recentCompletions)
                        {
                            <div class="task-item task-item-completed">
                                <div class="task-title">@task.Title</div>
                                <div class="task-meta">@GetAssignedEmployees(task) · @GetTimeAgo(task.UpdatedAt)</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center">
            <h1 class="display-4">Access Denied</h1>
            <p>You do not have permission to view this page.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

