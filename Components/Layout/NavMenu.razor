@implements IDisposable

@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="top-row ps-3 navbar">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            <span class="brand-icon">
                <i class="bi bi-diagram-3-fill"></i>
            </span>
            <span class="brand-text">ManageFlow</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column nav-container">
        <AuthorizeView>
            <Authorized>
                <div class="nav-top">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/dashboard">
                            <span class="bi bi-kanban" aria-hidden="true"></span> Dashboard
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="employees">
                            <span class="bi bi-people-fill" aria-hidden="true"></span> Employee List
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="tasks">
                            <span class="bi bi-list-check" aria-hidden="true"></span> Task List
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="departments">
                            <span class="bi bi-building" aria-hidden="true"></span> Departments
                        </NavLink>
                    </div>
                </div>

                <div class="nav-bottom">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Manage">
                            <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <button class="nav-link nav-link-subtle" @onclick="ToggleTheme" @onclick:preventDefault="true">
                            <span class="bi @(isDarkMode ? "bi-sun-fill" : "bi-moon-fill")" aria-hidden="true"></span> @(isDarkMode ? "Light Mode" : "Dark Mode")
                        </button>
                    </div>
                    <div class="nav-item px-3">
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="nav-link nav-link-subtle">
                                <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="">
                        <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;
    private bool isDarkMode = false;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var currentTheme = await JSRuntime.InvokeAsync<bool>("themeManager.isDark");
            if (currentTheme != isDarkMode)
            {
                isDarkMode = currentTheme;
                StateHasChanged();
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isDarkMode = await JSRuntime.InvokeAsync<bool>("themeManager.isDark");
        }
        catch
        {
            // JS not available during prerender
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        await JSRuntime.InvokeVoidAsync("themeManager.setTheme", isDarkMode ? "dark" : "light");
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        try
        {
            isDarkMode = await JSRuntime.InvokeAsync<bool>("themeManager.isDark");
            await JSRuntime.InvokeVoidAsync("themeManager.setTheme", isDarkMode ? "dark" : "light");
        }
        catch
        {
            // JS not available
        }
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

